<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <com.umeng.soexample.mvp.view.HeadView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:title="注册" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_input_phone_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/home_shop_bg"
        android:hint="请输入手机账号"
        android:inputType="phone"
        android:paddingLeft="@dimen/dp_5" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/home_shop_bg"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dp_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_input_code_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/home_shop_bg"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_5" />

        <Button
            android:id="@+id/login_request_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/login_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/login_btn_bg"
        android:text="注册"
        android:textColor="@color/colorffffff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>